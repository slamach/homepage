---
import { config } from '@/constants';
import IconLink from './IconLink.astro';

interface Props {
  className?: string;
}

const { className, ...rest } = Astro.props;
---

<footer class:list={['footer', className]} {...rest}>
  <p class="footer__copyright">Â© Dmitrii Sviridov 2024</p>
  <ul class="footer__socials-list">
    <li>
      <IconLink
        href={config.links.telegram}
        iconName="telegram"
        ariaLabel="Telegram"
        target="_blank"
      />
    </li>
    <li>
      <IconLink
        href={`mailto:${config.email}`}
        iconName="email"
        ariaLabel="Email"
        target="_blank"
      />
    </li>
    <li>
      <IconLink
        href={config.links.github}
        iconName="github"
        ariaLabel="GitHub"
        target="_blank"
      />
    </li>
    <li>
      <IconLink
        href={config.links.linkedin}
        iconName="linkedin"
        ariaLabel="LinkedIn"
        target="_blank"
      />
    </li>
  </ul>
</footer>

<style>
  .footer {
    display: flex;
    flex-direction: column-reverse;
    align-items: center;
    gap: 8px;
    padding: 16px 0;
    color: var(--color-text-secondary);

    @media (--tablet) {
      flex-direction: row;
      justify-content: space-between;
      gap: unset;
      padding: 32px 0;
    }
  }

  .footer__copyright {
    margin: 0;
    font-size: 14px;

    @media (--tablet) {
      font-size: 16px;
    }
  }

  .footer__socials-list {
    display: flex;
    align-items: center;
    gap: 8px;
    margin: 0;
    padding: 0;
    list-style: none;
  }
</style>
