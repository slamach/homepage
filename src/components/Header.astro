---
import { Image } from 'astro:assets';
import logoImage from '@assets/logo.svg';
import { Icon } from 'astro-icon/components';

interface Props {
  class?: string;
}

const { class: className, ...rest } = Astro.props;
---

<header class:list={['container', className]} {...rest}>
  <a class="logo" href="/">
    <Image src={logoImage} alt="Dmitrii Sviridov's logo" loading="eager" />
  </a>
  <nav class="navigation">
    <ul class="navigation-list">
      <li>
        <a class="navigation-link" href="/articles">Articles</a>
      </li>
      <li>
        <!-- TODO: Add link to resume -->
        <a class="navigation-link" href="#">Resume</a>
      </li>
    </ul>
    <ul class="action-list">
      <li>
        <a class="action-link" href="/rss.xml">
          <span class="visually-hidden">RSS</span>
          <Icon name="rss" size={24} />
        </a>
      </li>
      <li>
        <!-- TODO: Make theme switch button -->
        <a class="action-link" href="#">
          <span class="visually-hidden">Switch theme</span>
          <Icon name="sun" size={24} />
        </a>
      </li>
    </ul>
  </nav>
</header>

<style>
  .container {
    display: flex;
    align-items: center;
    padding: 16px 0;

    @media (--tablet) {
      padding: 32px 0;
    }
  }

  .logo {
    margin-right: auto;
  }

  .navigation {
    display: flex;
    align-items: center;
    gap: 32px;
  }

  .navigation-list {
    display: flex;
    align-items: center;
    gap: 16px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .navigation-link {
    text-transform: lowercase;
    text-decoration: none;
    font-weight: 500;
    color: inherit;
  }

  .action-list {
    display: flex;
    align-items: center;
    gap: 8px;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .action-link {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 24px;
    height: 24px;
    color: inherit;

    &:hover,
    &:focus-visible {
      color: var(--color-accent);
    }
  }
</style>
